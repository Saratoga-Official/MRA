{
    "task": [
        {
            "name": "自动远征",
            "entry": "开始自动远征",
            "default_check": false,
            "description": "开启远征等待模式会在程序关闭前无限等待收发远征<br>可结合定时执行功能实现定点收远征",
            "option": [
                "远征等待模式"
            ]
        }
    ],
    "option": {
        "远征等待模式": {
            "type": "switch",
            "cases": [
                {
                    "name": "No",
                    "pipeline_override": {}
                },
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "等待模式退出远征": {
                            "enabled": true
                        }
                    },
                    "option": [
                        "远征检查等待时间(ms)"
                    ]
                }
            ]
        },
        "远征检查等待时间(ms)": {
            "type": "input",
            "inputs": [
                {
                    "name": "远征检查等待时间(ms)",
                    "default": "60000",
                    "pipeline_type": "int",
                    "verify": "^[1-9][0-9]*$",
                    "pattern_msg": "必须为正整数"
                }
            ],
            "pipeline_override": {
                "远征等待模式": {
                    "post_delay": "{远征检查等待时间(ms)}"
                }
            }
        }
    }
}